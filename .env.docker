# Docker Environment Variables
# Copy this file to .env and update with your values

# Environment
NODE_ENV=production
BUILD_TARGET=production  # Options: dev, production

# Ports
FRONTEND_PORT=3000
BACKEND_PORT=5000
MONGO_PORT=27017
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_strong_password_here
MONGO_DATABASE=balsampada-lms

# Redis Configuration
REDIS_PASSWORD=changeme_strong_redis_password_here

# JWT Configuration (Generate secure secrets)
JWT_ACCESS_SECRET=generate_64_char_secure_secret_for_access_tokens
JWT_REFRESH_SECRET=generate_64_char_secure_secret_for_refresh_tokens
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_SECRET=fallback_jwt_secret_for_old_system
JWT_EXPIRE=7d

# Session Secret
SESSION_SECRET=generate_secure_session_secret_here

# URLs
CLIENT_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Email Configuration (Optional - for email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway (Optional - Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Production Domain (Update for production)
# CLIENT_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com